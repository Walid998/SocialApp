{
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes":["warn","single"],
      "semi": [
        "error",
        "always"
      ],
      "@typescript-eslint/no-var-requires": "off"
    },
    "root": true
  }